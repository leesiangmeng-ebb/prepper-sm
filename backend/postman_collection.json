            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tomato\",\n  \"base_unit\": \"kg\",\n  \"cost_per_base_unit\": 2.50,\n  \"category\": \"vegetables\",\n  \"source\": \"manual\",\n  \"master_ingredient_id\": null,\n  \"suppliers\": null\n}"

          "name": "Update Structured Instructions",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"steps\": [\n    {\n      \"step_number\": 1,\n      \"description\": \"Boil water and cook pasta until al dente\",\n      \"duration_minutes\": 10\n    },\n    {\n      \"step_number\": 2,\n      \"description\": \"Whisk eggs with parmesan in a bowl\",\n      \"duration_minutes\": 2\n    },\n    {\n      \"step_number\": 3,\n      \"description\": \"Cook pancetta until crispy\",\n      \"duration_minutes\": 5\n    },\n    {\n      \"step_number\": 4,\n      \"description\": \"Combine pasta with egg mixture and pancetta\",\n      \"duration_minutes\": 2\n    },\n    {\n      \"step_number\": 5,\n      \"description\": \"Season with black pepper and serve\",\n      \"duration_minutes\": 1\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/recipes/{{recipeId}}/instructions/structured",
              "host": ["{{baseUrl}}"],
              "path": ["recipes", "{{recipeId}}", "instructions", "structured"]
            },
            "description": "Manually update structured instructions"
          }
        }
      ]

          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/recipes/{{recipeId}}/instructions/parse",
              "host": ["{{baseUrl}}"],
              "path": ["recipes", "{{recipeId}}", "instructions", "parse"]
            },
            "description": "Parse raw instructions into structured format using LLM"
